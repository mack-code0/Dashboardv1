<!DOCTYPE html>
<html>
<head>
    <%- include('../includes/headerlink.ejs')  %> 
</head>
<body>

	    <main>
        <div class="w-50 mx-auto main my-5">
            <img src="/images/logo.png" class="mb-5" width="170">

            <p class="p1 mb-4">Signup<i class="bx bxs-lock"></i></p>
            
            <a class="a-text" href="#">
                <div class="blues d-flex justify-content-center py-2 mb-4">
                    <i class="bx bxl-google mr-1"></i><p class="my-auto">Login with Google</p>
                </div>
            </a>

             <p class="subtitle fancy mt-5 mb-4"><span>or</span></p>
            
             <form method="post" action="/signup">
                <% if(errorMessage){ %> 
                    <%- include("../includes/message.ejs", {messageType: "danger", successMessage: ""}) %> 
                <% } %>
                 <div class="form-group">
                     <label for="email" class="form-label">Email</label>
                     <input id="email" type="email" name="email" value="<%= oldInput.email %>" class="form-control form-input<%= validationErrors.find(e=>e.param=='email')?' invalid-input':'' %>">
                 </div>

                 <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input id="password" type="password" name="password" class="form-control form-input<%= validationErrors.find(e=>e.param=='password')?' invalid-input':'' %>">
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Confirm Password</label>
                    <input id="password" type="password" name="confirmPassword" class="form-control form-input<%= validationErrors.find(e=>e.param=='confirmPassword')?' invalid-input':'' %>">
                </div>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="form-group">
                    <button class="btn blue-bg text-white px-4 mb-2">Signup</button>
                    <p class="check_box_text">Already have an account? <a href="/login" class="a-text">Login Here</a></p>
                </div>
            </form>
        </div>
    </main>
    
    
    <script src="/styling/js/jquery-3.4.1.js"></script>
    <script type="text/javascript" src="/styling/js/bootstrap.min.js"></script>
</body>
</html>